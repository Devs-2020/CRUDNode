<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My CRUD in NodeJS</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <style>
    nav div {
        margin-left: 5px;
    }

    .container {
        margin-top: 25px;
    }

    h2  {
      margin-bottom: 30px;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link btn btn-primary" href="/">Home</a>
        </li>
        <div class="dropdown">
            <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Cadastro de Alunos
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="cadastrar" href="/alunos/create">Novo Cadastro</a><br>
                <a class="mostrar" href="/alunos/show">Mostrar Registros</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Cadastro de Professores
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="cadastrar" href="/prof/create">Novo Cadastro</a><br>
                <a class="mostrar" href="/prof/show">Mostrar Registros</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Cadastro de Livros
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            
                <a class="cadastrar" href="/livros/create">Novo Cadastro</a><br>
                <a class="mostrar" href="/livros/show">Mostrar Registros</a>
            </div>  
        </div>
    </ul>
</nav>
<div class="container">
  <h2>Editar Registro de Professores</h2>
    <% data.forEach(function(details) { %>
      <form action="/prof/edit/<%= details._id %>" method="POST">
        <div class="form-group">
          <label for="nome">Nome</label>
          <input class="form-control" type="text" placeholder="Nome Completo" value="<%= details.nome %>" name="nome">
        </div>

        <div class="form-group">
          <label for="CPF">CPF</label>
          <input class="form-control" type="text" placeholder="Cpf: 000.000.000-00" value="<%= details.CPF %>" name="CPF">
        </div>

        <div class="form-group">
          <label for="sexo">Sexo</label>
          <input class="form-control" type="text" placeholder="Sexo: Masculino/Feminino" value="<%= details.sexo %>" name="sexo">
        </div>
        
        <div class="form-group">
          <label for="telefone">Telefone</label>
          <input class="form-control" type="text" placeholder="Cel.: (00) 0000-0000" value="<%= details.telefone %>" name="telefone">
        </div>

        <div class="form-group">
          <label for="idade">Idade</label>
          <input class="form-control" type="text" placeholder="Idade: 00 anos" value="<%= details.idade %>" name="idade">
        </div>

        <div class="form-group">
          <label for="endereco">Endereço</label>
          <input class="form-control" type="text" placeholder="Endereço: Rua Albet Simões,12" value="<%= details.endereco %>" name="endereco">
        </div>

        <div class="form-group">
          <label for="email">E-mail</label>
          <input class="form-control" type="text" placeholder="Email: unifacs@unifacs.br" value="<%= details.email %>" name="email">
        </div>

        <div class="form-group">
          <label for="codigo">Código</label>
          <input class="form-control" type="text" placeholder="Codigo: 208180669" value="<%= details.codigo %>" name="codigo">
        </div>
        <select name="estado">
          <option value="ba">BA</option>
          <option value="ma">MA</option>
          <option value="rj">RJ</option>
          <option value="sp">SP</option>
        </select><br><br>
        <div class="form-group">
          <label for="especialidade">Especialidade</label>
          <input class="form-control" type="text" placeholder="Especialidade: Mobile/Web/Arquitetura" value="<%= details.especialidade %>" name="especialidade">
        </div>
        <br />
        <button class="btn btn-secondary"><a style="color:ghostwhite; text-decoration: none; " href="/prof/show">Voltar</a></button>
        <button class="btn btn-secondary" type="submit">Salvar</button>
      </form>
    <% }) %>
  </div>
</body>
</html>
